<section class="w-full h-screen flex flex-col justify-center items-center relative overflow-hidden px-6 md:px-12">
  <!-- Texto principal -->
  <div class="z-10 text-center md:text-left">
    <h1 class="text-3xl md:text-5xl font-bold italic text-pink-200 drop-shadow-lg leading-snug">
      SEMBRÉ <br />
      ALGODÓN Y <br />
      COSECHÉ <br />
      UNA NUBE
    </h1>
  </div>

  <!-- Corazones animados -->
  <img src="/corazones.webp" alt="corazón" 
       class="absolute top-10 left-10 w-12 md:w-16 animate-pulse-slow rotate-[-10deg]" />
  <img src="/corazones.webp" alt="corazón" 
       class="absolute bottom-10 left-20 w-12 md:w-16 animate-pulse-slow rotate-[15deg]" />

  <!-- Nube -->
  <img src="/nubecita.webp" alt="nube" 
       class="absolute top-20 right-12 w-28 md:w-40" />

  <!-- Algodón -->
  <img src="/algodon.webp" alt="algodón" 
       class="absolute bottom-28 right-16 w-32 md:w-44" />
</section>

<style>
  /* Animación personalizada más lenta que pulse de Tailwind */
  @keyframes pulse-slow {
    0%, 100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.15);
    }
  }

  .animate-pulse-slow {
    animation: pulse-slow 2s infinite;
  }
</style>
