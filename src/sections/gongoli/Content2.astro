<section class="w-full h-screen flex flex-col justify-center items-center relative overflow-hidden px-6 md:px-12">
  <!-- Texto principal -->
  <div class="z-10 text-center md:text-left">
    <h1 class="text-2xl md:text-5xl font-bold italic text-pink-200 drop-shadow-lg leading-snug">
      PARA <br />
      CONSTRUIRTE <br />
      UNA CASITA <br />
      EN EL CIELO :3
    </h1>
  </div>

  <!-- Corazones animados -->
  <img src="/corazones.webp" alt="corazón" 
       class="absolute top-10 right-10 w-10 md:w-16 animate-pulse-slow rotate-[10deg]" />
  <img src="/corazones.webp" alt="corazón" 
       class="absolute bottom-10 left-6 w-10 md:w-16 animate-pulse-slow rotate-[-10deg]" />

  <!-- Casita en la nube -->
  <img src="/casitacielo.webp" alt="casita en el cielo" 
       class="absolute bottom-24 right-10 w-28 md:w-56 z-0" />

  <!-- Cocos corriendo -->
  <img id="cocodrilos" src="/cocoycocarun.webp" alt="cocodrilos corriendo" 
       class="absolute bottom-20 left-4 w-28 md:w-56 z-10 transition-transform duration-700 ease-out" />
</section>

<style>
  /* Corazones con pulso */
  @keyframes pulse-slow {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
  }
  .animate-pulse-slow {
    animation: pulse-slow 2s infinite;
  }

  /* Saltito de celebración */
  @keyframes jump-celebrate {
    0%, 100% { transform: translateY(0) scale(1); }
    30% { transform: translateY(-15px) scale(1.1); }
    60% { transform: translateY(0) scale(0.95); }
  }
  .celebrate {
    animation: jump-celebrate 0.8s ease-in-out;
  }
</style>

<script>
  if (typeof window !== "undefined") {
    const cocos = document.getElementById("cocodrilos");

    window.addEventListener("scroll", () => {
      if (cocos) {
        const scrollY = window.scrollY;
        const isMobile = window.innerWidth < 768;
        const maxMove = isMobile ? 120 : 250;
        const moveX = Math.min(scrollY * 0.3, maxMove);

        cocos.style.transform = `translateX(${moveX}px)`;

        // Cuando llega al máximo, hacer celebración
        if (moveX >= maxMove) {
          if (!cocos.classList.contains("celebrate")) {
            cocos.classList.add("celebrate");
            setTimeout(() => cocos.classList.remove("celebrate"), 900);
          }
        }
      }
    });
  }
</script>
