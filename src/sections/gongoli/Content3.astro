<style>
  /* Corazones con pulso */
  @keyframes pulse-slow {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.15); }
  }
  .animate-pulse-slow {
    animation: pulse-slow 2s infinite;
  }

  /* Flotación suave */
  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>
