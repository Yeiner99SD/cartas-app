<div class="flex flex-col items-center justify-center min-h-screen px-6 text-center">
  
  <!-- Texto de bienvenida -->
  <div class="mb-12 max-w-2xl">
    <h1 class="text-white text-3xl font-semibold mb-2">
      Bienvenida, este es tu sitio exclusivo &lt;3
    </h1>
    <p class="text-white/80 text-sm">
      Accede con tus credenciales exclusivas y puedes ver tus cartas por siempre.
    </p>
  </div>

  <!-- Contenido principal -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center max-w-5xl w-full">
    
    <!-- Columna izquierda: imagen carta -->
    <div class="flex justify-center">
      <img src="/carta.webp" alt="Carta" class="max-w-[200px] sm:max-w-xs" />
    </div>

    <!-- Columna derecha: formulario -->
    <div class="relative border border-white/60 p-8 rounded-sm mx-auto max-w-sm w-full">
      
      <!-- Corazón arriba derecha -->
      <img 
        src="/corazones.webp" 
        alt="Corazón" 
        class="absolute top-0 right-0 w-10 -translate-y-1/2 translate-x-1/2"
      />

      <!-- Corazón abajo izquierda -->
      <img 
        src="/corazones.webp" 
        alt="Corazón" 
        class="absolute bottom-0 left-0 w-10 translate-y-1/2 -translate-x-1/2"
      />

      <h2 class="text-white text-lg font-semibold text-center mb-6 italic">
        INICIO DE SESIÓN
      </h2>

      <form class="flex flex-col gap-4">
        <input 
          type="text" 
          placeholder="usuario" 
          class="px-4 py-2 bg-transparent border border-white/60 text-white italic placeholder-white/80 focus:outline-none focus:border-white"
        />
        <input 
          type="password" 
          placeholder="contraseña" 
          class="px-4 py-2 bg-transparent border border-white/60 text-white italic placeholder-white/80 focus:outline-none focus:border-white"
        />
        <button 
          type="submit" 
          class="mt-4 px-4 py-2 bg-white text-purple-700 font-semibold hover:bg-purple-200 transition-colors"
        >
          Ingresar
        </button>
      </form>
    </div>

  </div>
</div>
