<script>
  function checkAuth() {
    const isLoggedIn = localStorage.getItem('isLoggedIn');
    const currentPath = window.location.pathname;
    
    // Verifica si no est치 logueado y est치 intentando acceder a rutas protegidas
    if (!isLoggedIn && (currentPath === '/home' || currentPath.startsWith('/cartas/') || currentPath.startsWith('/nuestras-cositas') )) {
      window.location.href = '/';
    }
  }

  // Verificar al cargar la p치gina
  checkAuth();

  // Verificar cuando el estado de navegaci칩n cambie
  window.addEventListener('popstate', checkAuth);
</script>
