---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---


<article class="rounded-lg border border-white/50 p-4 text-center max-w-xs">
  <!-- Título -->
  <h3 class="text-lg font-bold text-[#5b2d1d] mb-3">
    {title}
</h3>

  <!-- Contenedor de imagen + texto -->
  <div class="rounded-lg overflow-hidden relative p-4" style="background: linear-gradient(to bottom, #9b4dca, #b48de0);">
    <!-- Icono corazón arriba izquierda -->
    <img src="/corazon.png" alt="Corazón" class="absolute top-2 left-2 w-5 h-5" />
    <!-- Nube arriba derecha -->
    <img src="/nube.png" alt="Nube" class="absolute top-2 right-2 w-12 h-12" />
    <!-- Algodón abajo derecha -->
    <img src="/algodon.png" alt="Algodón" class="absolute bottom-4 right-4 w-16 h-16" />

    <!-- Texto -->
    <p class="text-white font-extrabold text-lg leading-tight text-left">
      {text}
    </p>

    <!-- Corazón abajo izquierda -->
    <img src="/corazon.png" alt="Corazón" class="absolute bottom-4 left-2 w-5 h-5" />
  </div>

  <!-- Botón -->
  <button class="mt-3 w-full border border-purple-500 rounded-md py-1 text-purple-700 font-semibold flex items-center justify-center gap-2">
    Ver carta
    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
      <path d="M12 4.5c-7.633 0-11.25 7.5-11.25 7.5s3.617 7.5 11.25 7.5 11.25-7.5 11.25-7.5-3.617-7.5-11.25-7.5zm0 12a4.5 4.5 0 1 1 0-9 4.5 4.5 0 0 1 0 9z"/>
    </svg>
  </button>
</article>
