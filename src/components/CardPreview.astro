---
interface Props {
  title: string;
  image: string;
  slug: string;
  from: string;
  to: string;
  text: string;
}

const { title, image, from, to, text, slug } = Astro.props;
---

<article class="flex flex-col items-center text-center">
  <!-- Título arriba -->
  <h3 class="mb-2 text-lg font-bold text-[#5b2d1d]">{title}</h3>

  <!-- Marco estilo monitor -->
  <div class="rounded-lg border border-white/50 overflow-hidden w-72">
    <!-- Imagen con overlay -->
    <div class="relative group">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-48 object-cover"
      />

      <!-- Hover SOLO sobre la imagen -->
      <div class="absolute inset-0 bg-black/70 flex flex-col items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
        <p class="text-white text-sm px-3 text-center">{text}</p>
        <p class="mt-2 text-xs text-gray-200 italic">
          De: {from} → Para: {to}
        </p>
      </div>
    </div>

    <!-- Footer tipo marco (ya no se tapa) -->
    <div class="bg-white/20 py-2 flex justify-center items-center gap-2">
      <button class="flex items-center gap-2 text-purple-900 font-bold hover:underline">
        <a href={`/cartas/${slug}`}>Ver carta</a>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 4.5c-7.633 0-11.25 7.5-11.25 7.5s3.617 7.5 11.25 7.5 11.25-7.5 11.25-7.5-3.617-7.5-11.25-7.5zm0 12a4.5 4.5 0 1 1 0-9 4.5 4.5 0 0 1 0 9z"/>
        </svg>
      </button>
    </div>
  </div>
</article>
